<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/review"
    android:padding="16dp"
    tools:context=".Volunteer.AddReviewFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/rate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Rate"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#55b3b1"
        app:layout_constraintEnd_toEndOf="@id/rate_tv"
        app:layout_constraintStart_toStartOf="@id/rate_tv"
        app:layout_constraintTop_toBottomOf="@id/rate_tv" />

    <TextView
        android:id="@+id/showRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/ratingBar"
        app:layout_constraintStart_toStartOf="@id/ratingBar"
        app:layout_constraintTop_toBottomOf="@id/ratingBar" />

    <TextView
        android:id="@+id/rateCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/showRating"
        app:layout_constraintStart_toStartOf="@id/showRating"
        app:layout_constraintTop_toBottomOf="@id/showRating"
        app:layout_goneMarginTop="20dp" />

    <EditText
        android:id="@+id/review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FFFFFF"
        android:hint="Write review"
        android:paddingStart="80dp"
        android:paddingEnd="80dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#000"
        android:textColorHint="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/rateCount"
        app:layout_constraintStart_toStartOf="@id/rateCount"
        app:layout_constraintTop_toBottomOf="@id/rateCount" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_style"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColorHint="#D39B9B"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/review"
        app:layout_constraintStart_toStartOf="@id/review"
        app:layout_constraintTop_toBottomOf="@id/review" />

</androidx.constraintlayout.widget.ConstraintLayout>